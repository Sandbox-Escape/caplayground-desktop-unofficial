{
  "name": "caplayground-desktop-unofficial",
  "version": "2.0.0",
  "description": "Offline Electron desktop wrapper for CAPlayground - fully local with no remote dependencies",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "express": "^4.18.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.sandbox-escape.caplayground-desktop",
    "productName": "CAPlayground Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "node_modules/express/**/*",
      "node_modules/path/**/*"
    ]
  }
}
